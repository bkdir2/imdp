<div class="row">
	<div class="span6 offset3">
		<%= form_for @user, html: {class: ""} do |f| %>
			<%= f.label :name %>
			<%= f.text_field :name %> 

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :age %>
			<%= f.text_field :age %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %></br>

			<%= f.submit btn,  class: "btn btn-large" %>
		<% end %>
	</div>
</div>